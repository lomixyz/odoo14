<odoo>
    <report id="menu_activity_report_pdf_print"
            model="activity.report.window"
            string="Activity Report"
            report_type="qweb-pdf"
            name="dev_gym_management.activity_template"
            file="dev_gym_management.activity_template"
            groups="dev_gym_management.gym_trainer"
            >
    </report>

    <record id="paperformat_activity_report_pdf" model="report.paperformat">
        <field name="name">Activity Report PDF</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">45</field>
        <field name="dpi">90</field>
    </record>

    <record id="dev_gym_management.menu_activity_report_pdf_print" model="ir.actions.report">
        <field name="paperformat_id" ref="dev_gym_management.paperformat_activity_report_pdf" />
    </record>
</odoo>