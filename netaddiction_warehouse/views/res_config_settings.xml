<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="stock_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']" position="inside">
                <h2>Configurazione Manifest</h2>
                <div class="row mt16 o_settings_container" id="netaddiction_manifest_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="general">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Dati generali</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="contrassegno_id" class="col-lg-4 o_light_label"/>
                                    <field name="contrassegno_id" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="bartolini">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Bartolini</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="bartolini_prefix_file1" class="col-lg-4 o_light_label"/>
                                    <field name="bartolini_prefix_file1" class="oe_inline"/>
                                </div>
                                <div class="row mt16">
                                    <label for="bartolini_prefix_file2" class="col-lg-4 o_light_label"/>
                                    <field name="bartolini_prefix_file2" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Tempi di Spedizione</h2>
                <div class="row mt16 o_settings_container" id="netaddiction_delivery_times">
                    <div class="col-12 col-lg-6 o_setting_box" id="hour_availability">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Disponibilit√† Oraria</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="hour_available" class="col-lg-4 o_light_label"/>
                                    <field name="hour_available" class="oe_inline"/>
                                </div>
                                <div class="row mt16">
                                    <label for="hour_not_available" class="col-lg-4 o_light_label"/>
                                    <field name="hour_not_available" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="shipping_days">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Giorni di Spedizione</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="shipping_days" class="col-lg-4 o_light_label"/>
                                    <field name="shipping_days" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
