<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wiz_update_reason">
            <field name="name">wiz.update.reason</field>
            <field name="model">wiz.update.reason</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="reject_reason" string="From"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_reject_reason" string="OK" type="object" default_focus="1"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="wiz_update_reason_action">
            <field name="name">wiz_update_reason_action</field>
            <field name="res_model">wiz.update.reason</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>